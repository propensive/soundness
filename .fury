command servlet scintillate/servlet
command server scintillate/server
default server

project javax-servlet
  name         Javax Servlet API
  website      https://github.com/vsch/flexmark-java
  description  Java standard servlet interfaces

  library api
    url  https://repo1.maven.org/maven2/javax/servlet/javax.servlet-api/3.0.1/javax.servlet-api-3.0.1.jar

project scintillate
  name         Scintillate
  website      https://github.com/propensive/scintillate
  license      apache-2
  description  Typesafe parsing and rendering of markdown

  module server
    compiler  scala
    sources   src/server
    include   telekinesis/client
    include   gesticulate/core
  
  module servlet
    compiler  scala
    sources   src/servlet
    include   scintillate/server
    include   javax-servlet/api

  stream latest
    lifetime 7
    guarantee functionality

  stream stable
    lifetime 180
    guarantee source

